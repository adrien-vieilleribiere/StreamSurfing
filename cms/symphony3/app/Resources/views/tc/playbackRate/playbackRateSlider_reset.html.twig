            onclick="nonLinearSlider{{ playerHtmlId }}.noUiSlider.set( document.getElementById('ttgPlaybackRate{{ playerHtmlId }}_default').value );
                    document.getElementById('{{ playerHtmlId }}')
                        .ttgSetPlaybackRate(document.getElementById('ttgPlaybackRate{{ playerHtmlId }}_default').value);"
            title="{{ "Reset the playback rate"|trans }}"

        ><span class="glyphicon glyphicon-scale" aria-hidden="true"></span> {{ "Reset"|trans }}</button>
{% endblock %}