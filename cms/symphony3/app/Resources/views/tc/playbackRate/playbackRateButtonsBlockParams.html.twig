{% extends 'modal.html.twig' %}

{% block head %}
    <h2 class="bg-inverse text-white">
        {{ "Playback Rate Buttons"|trans }}
    </h2>
{% endblock %}
{% block body %}

    <a onclick="javascript:forceFixedPRB(
        'fixedPlaybackRateValues{{ playerHtmlId }}'
        ,'0.25;0.5;1;1.5;2'
        , 'playbackRateButtoms{{ playerHtmlId }}'
        , '{{ playerHtmlId }}')"
       class="btn btn-primary active">Youtube</a>

    <a onclick="javascript:forceFixedPRB(
            'fixedPlaybackRateValues{{ playerHtmlId }}'
            ,'0.5;0.6;0.7;0.8;0.9;1;1.1;1.2;1.3;1.4;1.5;2;3;4'
            , 'playbackRateButtoms{{ playerHtmlId }}'
            , '{{ playerHtmlId }}')"
       class="btn btn-primary active">{{ "A lot" | trans }} (Chrome - {{ "audio" | trans }})</a>
    <hr/>
    <input type="text"
           required
           name="fixedPlaybackRateValues{{ playerHtmlId }}"
           id="fixedPlaybackRateValues{{ playerHtmlId }}"
           class="form-control"
           pattern="-?[0-9]?(\.[0-9]+)(;-?[0-9]+?(\.[0-9]+))*"
           value="0.25;0.5;1;1.5;2"
           onchange="javascript:createFixedPRButtons('fixedPlaybackRateValues{{ playerHtmlId }}'
                   , 'playbackRateButtoms{{ playerHtmlId }}'
                   , '{{ playerHtmlId }}'
        )"/>

{% endblock %}