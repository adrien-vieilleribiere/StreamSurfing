{% extends 'base.html.twig' %}
{% block body %}

    {{ include('media/render.html.twig',
    {'media': media}) }}


    <div class="chartsContainer">
           {{ include('tc/navProgressBar.html.twig', {
               'media':media,
               'rootId':'progressBarRange'
           }) }}



    {{ include('tc/progressBar/navProgressBarParams.html.twig',
         {  'media': media,
            'modalId': 'progressBarRangeModal',
            'rootId':'progressBarRange'}) }}

<table class="table table-responsive table-condensed center"
       style="border:none"
       >
    <tbody>
    <tr>
        <td style="border-top: none">
    {{ include('tc/progressBar/navProgressBarParams_updateProgress.html.twig',
                                 {  'media': media,
                                    'modalId': 'progressBarRangeModal',
                                    'rootId':'progressBarRange'}) }}
        </td>
        <td style="border-top: none">
             {{ include('tc/progressBar/navProgressBarParams_recenterPlayhead.html.twig',
                                 {  'media': media,
                                    'modalId': 'progressBarRangeModal',
                                    'rootId':'progressBarRange'}) }}
        </td>
        <td style="border-top: none">
                {{ include('tc/progressBar/navProgressBarParams_open.html.twig',
                     {  'media': media,
                        'modalId': 'progressBarRangeModal',
                        'rootId':'progressBarRange'}) }}
        </td>
    </tr>
    </tbody>
</table>
  </div>

{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <style>
        .player{resize:both; width:100%}
        .center{text-align:center;}
        *[data-type='marker']{cursor:pointer;}

    </style>
{% endblock %}
