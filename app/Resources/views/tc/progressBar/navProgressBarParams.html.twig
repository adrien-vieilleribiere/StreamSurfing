{% extends 'modal.html.twig' %}

{% block head %}
    <h2 class="bg-inverse text-white">
        {{ "Progress Bars"|trans }}
    </h2>
{% endblock %}
{% block body %}
    <label for="chartProgressRecurence">{{ "Progress Refresh Frequency" | trans }}</label>
    <select id="chartProgressRecurence" name="chartProgressRecurence" class="form-control">
        <option value="0">{{ "Never"|trans }}</option>
        <option value="10">10 {{"milliseconds"|trans}}</option>
        <option value="100" selected="selected">100 ms</option>
        <option value="200">200 ms</option>
        <option value="400">400 ms</option>
        <option value="1000">1 {{"second"|trans}}</option>
        <option value="3000">3 {{"seconds"|trans}}</option>
        <option value="10000">10 s</option>
    </select>
    <hr/>
    <h2>Zoom</h2>
    <label for="chartRecenteringPosition">{{"Playhead position in the zoom"|trans}}</label>
    <input id="chartRecenteringPosition"
           name="chartRecenteringPosition"
           class="form-control"
           type="range"
           title="{{"Playhead position in the zoom"|trans}}"
           value="0.3" step="any" max="1" min="0">
    <label><input type="checkbox" name="autoRecenterPlayhead" id="autoRecenterPlayhead" value="true">{{ "Follow the playhead" | trans }}</label>
    <br/>
    <label for="chartRecenteringRecurence">{{ "Refresh Frequency" | trans }}</label>
    <select id="chartRecenteringRecurence" name="chartRecenteringRecurence" class="form-control">
        <option value="0">{{ "Never"|trans }}</option>
        <option value="100">0.1 {{"seconds"|trans}}</option>
        <option value="200">0.2 {{"seconds"|trans}}</option>
        <option value="400">0.4 {{"seconds"|trans}}</option>
        <option value="1000">1 {{"second"|trans}}</option>
        <option value="2000">2 {{"seconds"|trans}}</option>
        <option value="2000" selected="selected">4 {{"seconds"|trans}}</option>
        <option value="5000">5 {{"seconds"|trans}}</option>
        <option value="10000">10 {{"seconds"|trans}}</option>
        <option value="20000">20 {{"seconds"|trans}}</option>
    </select>
    <label>{{"Zoom Length"|trans}}</label>
    <table class="table table-compact center">
        <thead>
        <tr>
            <td> <a class="btn btn-primary active"
                    id="forceZoomFromSize"
                    title="{{"Force Zoom Size"|trans}}"
                    onclick="changeSizeRange2('progressBarRange', 'fixedZoomTotalSeconds')">{{"Force Zoom"|trans}}</a>
            </td>
            <td>
                <input type="number" name="fixedZoomTotalSeconds" id="fixedZoomTotalSeconds"
                       min="0" step="0.001" value="60"
                       onchange="javascript:splitDate('fixedZoomHours','fixedZoomMinutes','fixedZoomSeconds','fixedZoomMilliSeconds','fixedZoomTotalSeconds')"> {{ "seconds" |trans }}</td></tr>
        </thead>
        <tbody>
        <tr><td>{{"hours"|trans}}</td>
            <td><input type="number" name="fixedZoomHours" id="fixedZoomHours"
                       min="0" value="0" max="10"
                       onchange="javascript:updateSplitDate('fixedZoomHours','fixedZoomMinutes','fixedZoomSeconds','fixedZoomMilliSeconds','fixedZoomTotalSeconds')"></td></tr>
        <tr><td>{{"minutes"|trans}}</td>
            <td><input type="number" name="fixedZoomMinutes" id="fixedZoomMinutes"
                       min="0" value="1" max="60"
                       onchange="javascript:updateSplitDate('fixedZoomHours','fixedZoomMinutes','fixedZoomSeconds','fixedZoomMilliSeconds','fixedZoomTotalSeconds')"></td></tr>
        <tr><td>{{"seconds"|trans}}</td>
            <td><input type="number" name="fixedZoomSeconds" id="fixedZoomSeconds"
                       min="0" value="0" max="60"
                       onchange="javascript:updateSplitDate('fixedZoomHours','fixedZoomMinutes','fixedZoomSeconds','fixedZoomMilliSeconds','fixedZoomTotalSeconds')"></td></tr>
        <tr><td>{{"milliseconds"|trans}}</td>
            <td><input type="number" name="fixedZoomMilliSeconds" id="fixedZoomMilliSeconds"
                       min="0" value="0" max="999"
                       onchange="javascript:updateSplitDate('fixedZoomHours','fixedZoomMinutes','fixedZoomSeconds','fixedZoomMilliSeconds','fixedZoomTotalSeconds')"></td></tr>
        </tbody>
    </table>
{% endblock %}

